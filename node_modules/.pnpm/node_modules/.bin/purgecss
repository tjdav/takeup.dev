#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/purgecss@7.0.2/node_modules/purgecss/bin/node_modules:/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/purgecss@7.0.2/node_modules/purgecss/node_modules:/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/purgecss@7.0.2/node_modules:/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/purgecss@7.0.2/node_modules/purgecss/bin/node_modules:/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/purgecss@7.0.2/node_modules/purgecss/node_modules:/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/purgecss@7.0.2/node_modules:/home/tom/Projects/takeup.dev/website/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../purgecss/bin/purgecss.js" "$@"
else
  exec node  "$basedir/../purgecss/bin/purgecss.js" "$@"
fi
